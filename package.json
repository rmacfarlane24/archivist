{
  "name": "archivist",
  "version": "1.0.16",
  "description": "Electron desktop app for managing external hard drive metadata",
  "author": {
    "name": "Ross MacFarlane",
    "email": "rmacfarlane24@googlemail.com"
  },
  "main": "lib/main.js",
  "homepage": "https://rmacfarlane24.github.io/archivist",
  "repository": {
    "type": "git",
    "url": "https://github.com/rmacfarlane24/archivist.git"
  },
  "bugs": {
    "url": "https://github.com/rmacfarlane24/archivist/issues"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite build --mode development --watch",
    "dev:electron": "cross-env NODE_ENV=development tsc -p tsconfig.electron.json && cross-env NODE_ENV=development electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "cross-env NODE_ENV=production vite build --mode production",
    "build:electron": "cross-env NODE_ENV=production tsc -p tsconfig.electron.json",
    "build:dev": "npm run build:vite:dev && npm run build:electron:dev",
    "build:vite:dev": "cross-env NODE_ENV=development vite build --mode development",
    "build:electron:dev": "cross-env NODE_ENV=development tsc -p tsconfig.electron.json",
    "package": "npm run build && cross-env NODE_ENV=production electron-builder",
    "package:win": "npm run build && cross-env NODE_ENV=production electron-builder --win",
    "package:mac": "npm run build && cross-env NODE_ENV=production electron-builder --mac",
    "package:linux": "npm run build && cross-env NODE_ENV=production electron-builder --linux",
    "test:build": "npm run build && npm run test:production",
    "test:production": "cross-env NODE_ENV=production electron .",
    "clean": "rimraf dist build app/dist lib",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "typescript",
    "react",
    "json-storage",
    "archivist"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.32",
    "rimraf": "^6.1.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "better-sqlite3": "^9.6.0",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtuoso": "^4.14.0"
  },
  "build": {
    "appId": "com.rossmacfarlane.archivist",
    "productName": "Archivist",
    "directories": {
      "output": "dist"
    },
    "files": [
      "lib/**/*",
      "app/dist/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      ".env.production"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "background": null,
      "format": "ULFO"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "rmacfarlane24",
      "repo": "archivist",
      "releaseType": "release"
    }
  }
}
